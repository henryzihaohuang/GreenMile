<!DOCTYPE html>
<html>
  <head>
    <title>GreenMile</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta property="og:title" content="Green Mile" />
    <meta property="og:image" content="https://media.giphy.com/media/AxilcpBjHjJw9pGSYI/giphy.gif" />
    <meta property="og:description" content="A fullstack clone of Robinhood using Ruby on Rails in the backend and React-Redux framework in the frontend." />
    <meta property="og:url" content="https://greenmile-aa.herokuapp.com/" />

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400&display=swap" rel="stylesheet">
    <%= javascript_include_tag 'application' %>

    <style>
    @import url('https://fonts.googleapis.com/css2?family=DM+Sans:wght@500&display=swap');
    </style>

    <script type="text/javascript">
      window.cloudAPIKey = "<%= Rails.application.credentials.iexcloud[:api_key] %>"
      window.sandboxAPIKey = "<%= Rails.application.credentials.iexcloud[:sandbox_api_key] %>"
      window.searchURL = "<%= image_url('search.png') %>";
      window.videoURL = "<%= image_url('homepage-video.mp4') %>";
      window.logoURL = "<%= image_url('forest-badge.png') %>";
      window.blackinfoURL = "<%= image_url('black-info-img.png') %>";
      window.splashURL = "<%= image_url('homepage-img.png') %>";
      window.infoURL = "<%= image_url('info-img.png') %>";
      window.graphURL = "<%= image_url('graph-img.png') %>";
    </script>

    <%= favicon_link_tag asset_path('forest-badge.png') %>
    
    <% if current_user %>
      <script>
      window.currentUser = {
        "id": <%= current_user.id %>,
        "first_name": "<%= current_user.first_name %>",
        "last_name": "<%= current_user.last_name %>",
        "email": "<%= current_user.email %>"
      };
      </script>
    <% end %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
